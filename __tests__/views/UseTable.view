UseTable Vertical
  Table
    from <
    headerHeight 40
    rowHeight 20
    rowColor #1C1C1C
    rowBackgroundColor white
    rowColorAlternate <rowColorAlternate
    rowBackgroundColorAlternate black
    when <isHovered
    rowColor red
    rowBackgroundColor black
    rowColorAlternate green
    rowBackgroundColorAlternate <rowBgColorAlternate
    Name Column
      key name
      width 90
      Header
        isHeader true
        text Name
      Cell
        isCell true
    Location Column
      key location
      width auto
      Text
        isHeader true
        text location
      Cell
        isCell true
    Description Column
      key description
      Cell
        isCell true